			label="COM_VOLUNTEERS_FILTER_SEARCH"
			description="COM_VOLUNTEERS_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="state"
			type="status"
			label="COM_VOLUNTEERS_FILTER_PUBLISHED"
			description="COM_VOLUNTEERS_FILTER_PUBLISHED_DESC"
